<%- include("partials/contact-header"); -%>

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">

  <style media="all">
    .navbar-brand {  /* Setting navbar text colour */
      color: #FFFFFF;
    }

    .navbar-brand:hover {
      color: #0000FF;
    }

    .hamburger-icon {
      color: #FFFFFF;
    }

    .nav-link {  /* Setting navbar text colour */
      color: #FFFFFF;
    }

    .nav-link:hover {
      color: #0000FF;
    }

    .top-container {
      background-color: #000000;
      /* This sets background colour for navbar('about-header.ejs') */
    }

    .navbar {
      background-color: #000000;
    }

    .contact--failure-page {
      width: 100vw;
      background-color: #7E0FC5;
    }

    .failure-page {
      width: 90%;
      margin: auto;
      padding: 100px 0;
      text-align: center;
      /* background-color: #000000; */
    }

    @media only screen and (min-width: 768px) and (max-width: 992px) {  /* Targeting medium-screen devices */
      .failure-page {
        padding: 160px 0;
      }
    }

    @media only screen and (min-width: 1300px) {  /* Targeting X-large devices */
      .failure-page {
        padding: 180px 0;
      }
    }

    .failure-background {
      background-color: #7E0FC5;
    }

    .text-1 {  /* Targeting small-screen devices & others */
      font-family: 'Roboto', sans-serif;
      font-weight: 700;
      font-size: 2.4rem;  /* Small-screen */
      color: #000000;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text-1 {
        transform: translateX(-16px);
      }
    }

    @media only screen and (min-width: 768px) {  /* Targeting medium-screen devices and up */
      .text-1 {
        font-size: 4.5rem;
      }
    }

    .text {
      font-family: 'Roboto', sans-serif;
      font-weight: 500;
      font-size: 1.1rem;
      color: #FFFFFF;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text {
        transform: translateX(-3px);
      }
    }

    .contact-button {  /* Targeting small-screen devices & others */
      width: 75%;  /* Small-screen - width here must exceed button width, so we can center button at small screen sizes */
      padding: 15px 0;
      margin-bottom: 40px;
      display: inline-block;
    }

    @media only screen and (min-width: 768px) {  /* Targeting medium-screen devices and up */
      .contact-button {
        width: 50%;
        /* background-color: #FF0000; */
      }
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .contact-button a:nth-child(1) {
         transform: translateX(-3px) scale(1.2);
      }
    }

    @media only screen and (min-width: 768px) and (max-width: 992px) {  /* Targeting medium-screen devices */
      .contact-button a:nth-child(1) {
        transform: translateY(-40px) scale(1.2);
      }
    }

    @media only screen and (min-width: 992px) {  /* Targeting large-screen devices and up */
      .contact-button a:nth-child(1) {
        transform: translateY(-60px) scale(1.2);
      }
    }

    .button-colour {
      color: #FFFFFF;
      border: none;  /* Overriding External CSS */
      background-color: #393b44;
    }

    .button-colour:hover {
      color: #FFFFFF;
      background-color: #393b44;
    }

    .button-size {
      transform: scale(1.2);
    }

    .bottom-container {
      background-color: #000000;
    }

    .footer-text {
      color: #FFFFFF;
    }
  </style>
</head>

<body>

  <section class="contact--failure-page">
    <div class="container-fluid">
      <div class="failure-page">
        <div class="jumbotron jumbotron-fluid text-center failure-background">
          <div class="container">
            <h1 class="text-1">Ooops...there's been an error!</h1>
            <p class="text">Please re-send your message:</p>
          </div>
        </div>
        <div class="contact-button">
          <a class="btn button-colour btn-lg button-size" href="/contact"><span class="font-weight-bold align-middle">Contact Page</span></a>
        </div>
      </div>
    </div>
    <!-- Scroll Button -->
    <button type="button" class="btn scroll-top"><i class="fas fa-chevron-up"></i></button>
  </section>

</body>

</html>

<%- include("partials/footer"); -%>
